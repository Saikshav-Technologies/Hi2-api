# Server Configuration
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5444/hi_db

# Redis Configuration (matches docker-compose.yml)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=  # Optional, leave empty if no password

# JWT Secrets (CHANGE IN PRODUCTION!)
JWT_ACCESS_SECRET=your-secure-access-secret-change-in-production
JWT_REFRESH_SECRET=your-secure-refresh-secret-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=hi2-uploads

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
