{
    "info": {
        "name": "Password Reset API",
        "description": "OTP-based password reset endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Request Password Reset",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"user@example.com\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/auth/password-reset/request",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "auth",
                        "password-reset",
                        "request"
                    ]
                },
                "description": "Request a password reset. A 6-digit OTP will be sent to the user's email (in development, OTP is returned in response)"
            },
            "response": []
        },
        {
            "name": "2. Verify OTP",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"user@example.com\",\n  \"otp\": \"123456\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/auth/password-reset/verify-otp",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "auth",
                        "password-reset",
                        "verify-otp"
                    ]
                },
                "description": "Verify the OTP received. Returns a reset token if OTP is valid (optional endpoint, can proceed directly to reset)"
            },
            "response": []
        },
        {
            "name": "3. Reset Password",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"user@example.com\",\n  \"otp\": \"123456\",\n  \"newPassword\": \"newSecurePassword123\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/auth/password-reset/reset",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "auth",
                        "password-reset",
                        "reset"
                    ]
                },
                "description": "Reset the password using OTP and new password. All existing sessions will be terminated for security."
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        }
    ]
}